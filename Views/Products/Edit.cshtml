@model ProductDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Product</h2>

        <form asp-action="Create" asp-controller="Products" enctype="multipart/form-data" method="post">
            <div class="row mb-3">
                <label for="id" class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@(ViewData["ProductId"])"></input>
                </div>
            </div>
            <div class="row mb-3">
                <label for="name" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input placeholder="Product Name" class="form-control" asp-for="Name"></input>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="brand" class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input placeholder="Product Brand"  class="form-control" asp-for="Brand"></input>
                    <span class="text-danger" asp-validation-for="Brand"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="category" class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                   <select class="form-select" asp-for="Category">
                    <option value='Others'>Others</option>
                    <option value='Phones' selected>Phones</option>
                    <option value='Computers'>Computers</option>
                    <option value='Accessories'>Accessories</option>
                    <option value='Printers'>Printers</option>
                    <option value='Cameras'>Cameras</option>
                   </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="price" class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input placeholder="Product Price"  class="form-control" asp-for="Price"></input>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="description" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea style="resize: none;" placeholder="Write About Your Product...."  class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <img src="/images/@(ViewData["ImageFileName"])" alt="Image" width="150">
                </div>
            </div>
            <div class="row mb-3">
                <label for="imagefile" class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile"></input>
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control-plaintext" readonly value="@(ViewData["CreatedAt"])">
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary"
                    asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>